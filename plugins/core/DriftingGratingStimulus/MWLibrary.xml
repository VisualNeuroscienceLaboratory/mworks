<MWElements>
	<MWElement name="Drifting Grating Stimulus">
		<!-- XPath 2.0 expression defining nodes of this type -->
		<match_signature>stimulus[@type="drifting_grating"]</match_signature>
		
		<isa>Stimulus</isa>
		
		<description>
			A drifting grating stimulus
        </description>
		
		<!-- Payload -->
		<code>
			<stimulus type="drifting_grating" tag="New Drifting Grating"
            grating_type="sinusoid"
            mask="gaussian"
            contrast="1"
            opacity="1"
            rotation="0"
            spatial_frequency="0"
            temporal_frequency="1"
            x_size="1"
            y_size="1"
            x_position="0"
            y_position="0"
            starting_phase="0"
            direction="0"
            std_dev="1"
            mean="0"
            autoplay="0"/>
        </code>
    </MWElement>
</MWElements>
