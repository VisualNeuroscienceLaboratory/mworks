<?xml version="1.0" standalone="no"?>
<monkeyml version="1.0">
    <io_devices tag="IO Devices"></io_devices>
    <variables tag="Variables">
        <variable tag="nominal_rate" scope="global" logging="when_changed" default_value="refreshRate()" type="float"></variable>
        <variable tag="actual_rate_start" scope="global" logging="when_changed" default_value="actualRefreshRate()" type="float"></variable>
        <variable tag="actual_rate_stop" scope="global" logging="when_changed" default_value="0" type="float"></variable>
        <variable tag="rate_diff" scope="global" logging="when_changed" default_value="0" type="float"></variable>
    </variables>
    <sounds tag="Sounds"></sounds>
    <stimuli tag="Stimuli">
        <stimulus tag="background" full_name="background" type="blank_screen" color="0, 0, 1"></stimulus>
    </stimuli>
    <filters tag="Filters"></filters>
    <optimizers tag="Optimizers"></optimizers>
    <experiment tag="New Experiment" full_name="" description="">
        <protocol tag="New Protocol" nsamples="1" sampling_method="cycles" selection="sequential">
            <task_system tag="New Task System" interruptible="YES">
                <task_system_state tag="Begin State System" interruptible="YES">
                    <action_marker _unmoveable="1" tag="Actions"></action_marker>
                    <action type="assert" tag="Assert" condition="nominal_rate == actual_rate_start" message="Nominal and actual rates differ"></action>
                    <action type="report" tag="Report" message="nominal rate = $nominal_rate"></action>
                    <action type="assignment" tag="Assign Variable" variable="actual_rate_start" value="actualRefreshRate()"></action>
                    <action type="report" tag="Report 2" message="starting actual rate = $actual_rate_start"></action>
                    <action type="assignment" tag="Assign Variable 4" variable="rate_diff" value="abs(actual_rate_start - nominal_rate) / nominal_rate * 100"></action>
                    <action type="report" tag="Report 5" message="nominal and actual starting rates differ by $rate_diff percent"></action>
                    <action type="assert" tag="Assert 2" condition="rate_diff &lt; 1.0" message="Nominal and actual starting rates differ by more than 1%"></action>
                    <action tag="Queue Stimulus" type="queue_stimulus" stimulus="background"></action>
                    <action tag="Update display" type="update_stimulus_display"></action>
                    <action type="start_timer" tag="Start Timer" timer="MyTimer" timebase="" duration="60" duration_units="s"></action>
                    <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                    <transition type="timer_expired" tag="If Timer Expired, Transition to ..." target="Exit State System" timer="MyTimer"></transition>
                </task_system_state>
                <task_system_state tag="Exit State System" interruptible="YES">
                    <action_marker _unmoveable="1" tag="Actions"></action_marker>
                    <action type="assignment" tag="Assign Variable 2" variable="actual_rate_stop" value="actualRefreshRate()"></action>
                    <action type="report" tag="Report 3" message="ending actual_rate = $actual_rate_stop"></action>
                    <action type="assignment" tag="Assign Variable 3" variable="rate_diff" value="abs(actual_rate_stop - actual_rate_start) / actual_rate_start * 100"></action>
                    <action type="report" tag="Report 4" message="starting and ending rates differ by $rate_diff percent"></action>
                    <action type="assert" tag="Assert 3" condition="rate_diff &lt; 0.01" message="Starting and ending rates differ by more than 0.01%"></action>
                    <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                    <transition tag="Return to parent task system" type="yield"></transition>
                </task_system_state>
            </task_system>
        </protocol>
    </experiment>
</monkeyml>