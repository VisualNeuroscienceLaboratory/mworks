<?xml version="1.0"?>
<monkeyml version="1.0">
    <io_devices>
        <iodevice tag="theITC" priority="" type="itc18" id="" alt="">
            <iochannel tag="Vx" variable="voltageX" capability="ITC18_ADC_INPUT0" data_type="analog" device="itc18" direction="input" synchrony="hardware_timed_synchronous" range_min="-10" range_max="10" resolution="16" update_interval="10ms" data_interval="3ms" TTL_trigger_port="0" pre_trigger_interval="5ms" post_trigger_interval="5ms"/>
            <iochannel tag="Vy" variable="voltageY" capability="ITC18_ADC_INPUT2" data_type="analog" device="itc18" direction="input" synchrony="hardware_timed_synchronous" range_min="-10" range_max="10" resolution="16" update_interval="10ms" data_interval="3ms" TTL_trigger_port="0" pre_trigger_interval="5ms" post_trigger_interval="5ms"/>
        </iodevice>
    </io_devices>
    <calibrators/>
    <filters/>
    <sounds/>
    <stimuli/>
    <variables>
        <variable tag="voltageX" full_name="" default_value="0" scope="GLOBAL" type="INTEGER" editable="ALWAYS" persistant="NO" logging="WHEN_CHANGED" groups="testVariables"/>
        <variable tag="voltageY" full_name="" default_value="0" scope="GLOBAL" type="INTEGER" editable="ALWAYS" persistant="NO" logging="WHEN_CHANGED" groups="testVariables"/>
        <variable tag="continue" full_name="" default_value="0" scope="GLOBAL" type="INTEGER" editable="ALWAYS" persistant="NO" logging="WHEN_CHANGED" groups="testVariables"/>
    </variables>
    <experiment tag="Experiment" full_name="" description="">
        <protocol tag="Protocol" full_name="" description="" interruptible="YES" selection="sequential_ascending" nsamples="1" sampling_method="cycles">
            <block tag="Block" full_name="" description="" interruptible="YES" selection="sequential_ascending" nsamples="1" sampling_method="cycles">
                <task_system tag="Task System" full_name="" description="" interruptible="YES">
                    <task_system_state tag="Init" full_name="" description="" interruptible="YES">
                        <action tag="Start Device IO" full_name="" type="start_device_io" device="theITC"/>
                        <action tag="init continue" full_name="" type="assignment" variable="continue" value="0"/>
                        <transition tag="goToWaiting" full_name="" target="waiting" type="direct"/>
                    </task_system_state>
                    <task_system_state tag="waiting" full_name="" description="" interruptible="YES">
                        <action tag="Report" full_name="" type="report" message="Waiting for continue == 1"/>
                        <transition tag="goToEnd" full_name="" target="end" type="conditional" condition="continue==1"/>
                    </task_system_state>
                    <task_system_state tag="end" full_name="" description="" interruptible="YES">
                        <action tag="Stop Device IO" full_name="" type="stop_device_io" device="theITC"/>
                        <transition tag="Yield" full_name="" target="~STATE_REF~" type="yield"/>
                    </task_system_state>
                </task_system>
            </block>
        </protocol>
    </experiment>
</monkeyml>